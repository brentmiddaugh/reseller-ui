<div class="login--grid">
  <form {{action 'authenticate' on='submit'}} class="login--form">
    {{#if errorMessage}}
      <span class="login--error">{{errorMessage.errors}}</span>
    {{/if}}

    <div class="form-group">
      {{input id='identification' placeholder='Email' value=identification class="form-control"}}
    </div>

    <div class="form-group">
      {{input id='password' placeholder='Password' type='password' value=password class="form-control"}}
    </div>

    <button id="submit" type="submit" class="btn btn-block login--submit">Login</button>
  </form>
</div>
